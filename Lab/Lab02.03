#include <stdio.h>

int main() {
    int termCode ;
    float investmentAmount , aprRate = 0.0 , TTInterest = 0.0 ;
    
    if (scanf( "%d %f", &termCode , &investmentAmount ) != 2 ) {
        return 1 ; 
    }
    
    switch (termCode){
    case 1:
        if( investmentAmount < 5000 ) {
            aprRate = 0.03 ;
        }else if ( investmentAmount >= 5000 ) {
            aprRate = 0.04 ;
        }
        break ;
    case 2:
        if( investmentAmount < 10000 ) {
            aprRate = 0.05 ;
        }else if ( investmentAmount >= 10000 ) {
            aprRate = 0.065 ;
        }
        break ;
    case 3:
        aprRate = 0.08 ;
        break ;
    default:
        break ;
    }
    
    if ( termCode >= 1 && termCode <= 3 ) {
        TTInterest = investmentAmount * aprRate ;
        printf( "%.2f\n" , TTInterest ) ;
    } else {
        printf( "Invalid Term Code" ) ;
    }

    return 0 ;
}
