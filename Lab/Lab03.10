#include <stdio.h>

struct Item {
    char name[60] ;
    float unitprice ;
    int quantity ;
} ;

int main() {
    int N ;
    float Stotal ;
    float vat = 0.07 ;
    float TTVAT ;
    float GTotal ;
    
    if(scanf( "%d" , &N ) != 1 ) {
        return 1 ;
    }

    struct Item ITEMS[N] ;

    printf( "---RECEIPT---\n" ) ;
    
    for( int i = 0 ; i < N ; i ++ ) {
    
        float itemcost ;

        if(scanf( "%s %f %d" , ITEMS[i].name , &ITEMS[i].unitprice , &ITEMS[i].quantity ) != 3 ) {
            return 1 ;
        }
        itemcost = ITEMS[i].unitprice * ITEMS[i].quantity ;
        printf( "%s x %d = %.2f\n" , ITEMS[i].name , ITEMS[i].quantity , itemcost ) ;
        Stotal += itemcost ;
    }
    TTVAT = Stotal * vat ;
    GTotal = Stotal + TTVAT ;
    printf( "--------------\n" ) ;
    printf( "Subtotal: %.2f\n" , Stotal ) ;
    printf( "VAT (7%%): %.2f\n" , TTVAT ) ;
    printf( "Grand Total: %.2f\n", GTotal ) ;
    
    return 0 ;
    
}
