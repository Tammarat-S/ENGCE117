#include <stdio.h>

int main() {
    int Temp_perdays[7] ;
    int i , Max_temp = 0 ;

    for( i = 0 ; i < 7 ; i ++ ) {
        printf( "Enter temperature for Day %d: " , i + 1 ) ;
        if( scanf( "%d" , &Temp_perdays[i] ) != 1 ) {
            return 1 ;
        }
        if(Temp_perdays[i] > Max_temp ) {
            Max_temp = Temp_perdays[i] ;
        }
    }
    printf( "\n--- DAILY TEMPERATURE REPORT ---\n" ) ;
    printf( "Recorded Temperatures (C): " ) ;
    for ( i = 0 ; i < 7 ; i ++ ) {
        printf( "%3d" , Temp_perdays[i] ) ;
    }
    printf( "\nMaximum Temperature Found: %d C\n", Max_temp ) ;
    if( Max_temp >= 35 ) {
        printf( "Weather is HOT!" ) ;
    } else {
        printf( "Weather is MODERATE." ) ;
    }
    return 0 ;
}
