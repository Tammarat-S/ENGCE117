#include <stdio.h>
#include <string.h>

void swap_value(int *a, int *b) ;

int main(){
    int num1 = 0 , num2 = 0 ;                                           //ตัวแปรเก็บค่าจำนวนเต็มที่รับเข้ามา
    
    printf("Enter value for num1: ") ;
    scanf("%d",&num1) ;
    printf("Enter value for num2: ") ;
    scanf("%d",&num2) ;
    
    printf( "\n--- SWAPPING REPORT ---\n" ) ;
    printf("Before swap - num1 = %d, num2 = %d\n", num1, num2) ;

    swap_value(&num1, &num2) ;                                          //เรียกใช้ฟังก์ชัน swap_value โดยส่งที่อยู่ของตัวแปร num1 และ num2 เข้าไป
    
    printf("After swap - num1 = %d, num2 = %d\n", num1, num2) ;
    
    return 0 ;

}//end main

//-----|ฟังก์ชั่นสลับค่าใช้การบวกและลบในการสลับค่า
void swap_value(int *a, int *b){
    *a = *a + *b ; 
    *b = *a - *b ; 
    *a = *a - *b  ;
}//end swap
