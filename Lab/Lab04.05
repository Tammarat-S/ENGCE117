#include <stdio.h>

int main() {
    int Num[6] ;
    int i , Sum = 0;

    for( i = 0 ; i < 6 ; i ++ ) {
        printf( "Enter integer number %d: " , i + 1 ) ;
        if( scanf( "%d" , &Num[i] ) != 1 ) {
            return 1 ;
        }
        Sum += Num[i] ;
    }
    printf( "\n--- SUMMATION REPORT ---\n" ) ;
    printf( "Recorded Numbers: " ) ;
    for ( i = 0 ; i < 6 ; i ++ ) {
        printf( "%3d" , Num[i] ) ;
    }
        printf( "\nTotal Sum of Numbers: %d\n" , Sum ) ;
    
    return 0 ;
}
