#include <stdio.h>

int main() {
    int n , i ; // ตัวแปรสำหรับเก็บจำนวนรอบ
    //----รับจำนวนรอบและเช็คว่ามากกว่าศูนย์หรือไม่
    if(scanf( "%d" , &n ) != 1) {
        while( getchar() != '\n' ) ; // เคลียร์บัฟเฟอร์
        return 0 ; // จบโปรแกรม
    }//end if
    //----ลูปแสดงประโยคตามจำนวนรอบที่รับมา
    for( i = n ; i > 0 ; i-- ) {
        printf( "Hello Loop!\n" ) ;
    }//end for
    return 0 ;
}//end main
