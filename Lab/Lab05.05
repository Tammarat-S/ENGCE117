#include <stdio.h>

struct Student {
    int id ;
} ;

#define SIZE 4 

int find_id ( struct Student find[] , int size ,int s_id ) ;

int main () {
    int i , found = 0 , Searchid = 0 ;

    struct Student stu[SIZE] ;
    
    printf( "Enter data for %d students:\n" , SIZE ) ;
    for( i = 0 ; i < SIZE ; i ++ ) {
        printf( "Student %d ID: " , i + 1 ) ;
        scanf( "%d" , &stu[i].id ) ;
    }
    
    printf( "\nEnter ID to search:" ) ;
    scanf( "%d" , &Searchid ) ;

    found = find_id( stu , SIZE , Searchid ) ;

    printf( "\n--- ID SEARCH REPORT ---\n" ) ;
    printf( "Recorded IDs: " ) ;
    for( i = 0 ; i < SIZE ; i ++ ) {
        printf("%d " , stu[i].id ) ;
    }

    printf( "\nSearch ID: %d\n" , Searchid ) ;

    if( found == 1 ) {
        printf( "ID FOUND in the system." ) ;
    }else {
        printf( "ID NOT FOUND in the system." ) ;
    }

    return 0 ;
} 

int find_id ( struct Student find[] , int size , int s_id ) {
    int i , found = 0 ;
    for( i = 0 ; i < size ; i ++ ) {
        if( find[i].id == s_id ) {
            found = 1 ;
        }
    }
    return found ;
}
