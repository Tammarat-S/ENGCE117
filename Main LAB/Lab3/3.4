#include <stdio.h>
#include <stdlib.h>

struct student {
    int id ;
    float score ;
};

void getstu(struct student S[][10] , int *room ) ; 

int main() {
    struct student stu[20][10] ;
    int group ;
    getstu(stu , &group ) ;
    for( int i = 0 ; i < group ; i++ ) {
        printf( "Room number %d\n" , i+1 ) ;
        for ( int a = 0 ; a < 10 ; a++ ) {
            printf( "%d studen ID %d score %.2f\n" , a+1 , stu[i][a].id , stu[i][a].score ) ;
        }
    }

    return 0 ;
}

void getstu(struct student S[][10] , int *room ) {
    printf( "Enter room: " ) ;
    scanf( "%d" , room ) ;

    for (int i = 0 ; i < *room ; i++ ) {
        for(int a = 0 ; a < 10 ; a++ ) {
            S[i][a].id = 100 + a ;
            S[i][a].score = rand() % 100 + 1 ;
        }
    }

}
