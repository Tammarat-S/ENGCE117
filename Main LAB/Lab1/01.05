#include <stdio.h>
#include <iostream>

void GetMat( int **Value, int *row, int *col ) ;

int main() {
    int *data ;
    int  m , n ;
    GetMat( &data, &m , &n ) ;
    return 0 ;
}

void GetMat( int **Value , int *row , int *col ) {
    int i , a ;
    printf( "Enter Rows and column: " ) ;
    scanf( "%d %d" , row , col) ;

    *Value = new int [ *row * *col ] ;

    for ( i = 0 ; i < *row ; i ++ ){
        for (a = 0 ; a < *col ; a ++ )
        {
            scanf( "%d" , &(*Value)[ i * *col + a] ) ;
        }
    }
    printf( "--------------\n" ) ;
    for ( i = 0 ; i < *row ; i ++ ){
        for (a = 0 ; a < *col ; a ++ )
        {
            printf( "%d" , (*Value)[ i * *col + a] ) ;
        }
        printf( "\n" ) ;
    }
}
