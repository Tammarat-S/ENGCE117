#include <stdio.h>

struct student {
    char sex ;
    float gpa ;
};

void up(struct student *g); 

int main() {
    struct student stu ;
    stu.sex = 'M' ;
    stu.gpa = 3.00 ;
    up(&stu) ;
    printf( "%.2f" , stu.gpa ) ;
    return 0 ;
}

void up(struct student *g){

    g->gpa += (*g).gpa * 0.1 ; 

}
