void explode( char str1[] , char split , char str2[][10] , int *count ) {
    int S = strlen(str1) ;
    int col = 0 ;
    int row = 0 ;
    //---|ทำการแยกคำ
    for ( int i = 0 ; i < S ; i ++ ) {
        //---|ตรวจสอบว่าเป็นตัวคั่นหรือไม่
        if ( str1[i] == split ) {
            str2[row][col] = '\0' ;     
            row ++ ;
            col = 0 ;
        }else {
            str2[row][col] = str1[i] ;
            col++ ;
        }
    }
    str2[row][col] = '\0' ;
    *count = row + 1 ; 
}
